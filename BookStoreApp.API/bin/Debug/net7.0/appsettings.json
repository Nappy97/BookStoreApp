{
  "ConnectionStrings": {
    "BookStoreAppDbConnection": "Server=localhost\\SQLEXPRESSLOCAL;Database=BookStoreDB;Trusted_Connection=true;TrustServerCertificate=true;User Id=sa; Password=1234;"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ]
  },
  "AllowedHosts": "*"
}